{% extends 'base.twig' %}

{% block title %}Unlock! - Hint {% endblock %}
{% block css %}/css/game.css{% endblock %}
{% block modal %}/css/modal.css{% endblock %}
{% block body %}
<nav>
    <ul class="menu">
        <li><img src="/img/nav/unlock-white.png" class="button" id="unlock-logo" alt="unlock"></li>
        {% if card.getState() == 'recto' %}
                <li id="bravo">Indice carte {{card.getIdCard()}} : {{textHint}}</li>
        {% else %}
                <li id="bravo">Vous n'avez pas encore d√©couverte cette carte !</li>
        {% endif %}
        
    </ul>
</nav>
<div class="game-main">
    <img src="/{{card.getImage()}}" class="card-show" alt="carte : {{card.getIdCard()}}">
    <div class="retour-button">
        <a href="/game/{{idGame}}">Retour</a>
    </div>
</div>


</div>
{% endblock %}
