{% extends 'base.twig' %}

{% block title %}Unlock! - Game {% endblock %}
{% block css %}css/game.css{% endblock %}

{% block body %}

<nav>
    <ul class="menu">
        <li><img src="img/nav/unlock-white.png" id="unlock-logo" alt="unlock"></li>
        <li id="timer">60:00</li>
        <li id="indice"><a href="">Indice</a></li>
        <li id="code"><a href="">Code</a></li>
        <li id="machine"><a href="">Machine</a></li>
        <li id="quitter"><a href="/">Quitter</a></li>
    </ul>
</nav>

<div class="game-main">
    <div class="chambre-card">
        <img src="{{cards[0].getImageRecto()}}" id="carte-chambre" alt="Carte Chambre d'Hôtel">
    </div>
    <div class="all-cards">
        <img src="{{cards[1].getImageVerso()}}"  alt="Carte Chambre d'Hôtel">
        <img src="{{cards[2].getImageVerso()}}"  alt="Carte Chambre d'Hôtel">
        <img src="{{cards[3].getImageRecto()}}"  alt="Carte Chambre d'Hôtel">
        <img src="{{cards[4].getImageVerso()}}"  alt="Carte Chambre d'Hôtel">
        <img src="{{cards[5].getImageRecto()}}"  alt="Carte Chambre d'Hôtel">
        <img src="{{cards[6].getImageVerso()}}"  alt="Carte Chambre d'Hôtel">
    </div>
</div>

<script src="index.js"></script>

{% endblock %}