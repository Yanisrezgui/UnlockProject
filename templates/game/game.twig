{% extends 'base.twig' %}

{% block title %}Unlock! - Game {% endblock %}
{% block css %}/css/game.css{% endblock %}
{% block modal %}/css/modal.css{% endblock %}

{% block body %}

<nav>
    <ul class="menu">
        <details>
            <summary>
                <li><img src="/img/nav/unlock-white.png" class="button" id="unlock-logo" alt="unlock"></li>
                <div class="details-modal-overlay"></div>
            </summary>
            <div class="details-modal" style="width: 420px;">
                <div class="details-modal-title">
                    <h1>Scénario - L'élite </h1>
                </div>
                <div class="details-modal-content" style="width: 350px;">
                    <img src="/{{cards[0].getImage()}}"  alt="carte : {{cards[0].getNumber()}}">
                </div>
            </div>
        </details>
        <li id="timer">60:00</li>
        <li id="indice"><a href="">Indice</a></li>
        <details>
            <summary>
                <li id="code" class="button">Code</li>
                <div class="details-modal-overlay"></div>
            </summary>
            <div class="details-modal" style="width: 420px;">
                <div class="details-modal-title">
                    <h1>Code</h1>
                </div>
                <div class="details-modal-content" style="width: 350px;">
                <h1>Entrez le code : </h1>
                <br>
                <input type"text" id="inputCode" name="inputCode"/>
                <br>
                {% set code = '' %}
                <button><a href="/game/{{idGame}}/{{code}}" style="color:black">Validé le code</a></button>
                </div>
            </div>
        </details>
        <li id="machine"><a href="">Machine</a></li>
        <li id="quitter"><a href="/">Quitter</a></li>
    </ul>
</nav>


<div class="game-main">
    <div class="chambre-card">
        <img src="{{cards[0].getImgRecto()}}" id="carte-chambre" alt="Carte Chambre d'Hôtel">
    </div>
    <div class="all-cards">
    {% for card in cards %}
        {% if card.getIdCard() != 1 %}
            <a href="/game/{{idGame}}/card/{{card.getIdCard()}}"><img src="/{{card.getImage()}}"  alt="carte : {{card.getIdCard()}}"></a>
        {% endif %}
    {% endfor %}
    </div>
</div>

<script src="/index.js"></script>

{% endblock %} 